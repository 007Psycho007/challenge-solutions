def format_duration(seconds):
    if seconds == 0:
        return "now"
    
    result = ""
    units = [
        (31536000, "year"),
        (86400, "day"),
        (3600, "hour"),
        (60, "minute"),
        (1, "second")
    ]

    for u in units:
        if result != "":
            result + " and "
        if seconds >= u[0]:

